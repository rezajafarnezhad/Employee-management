
@model EmployeeMG.Core.ApplicationContract.Company.Edit


@{
    Layout = null;
}


<div class="modal fade" id="CreateCompo" tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <form id="FrmCreate" method="post"  enctype="multipart/form-data">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">ویرایش شرکت @Model.Name</h5>
                    <button type="button" onclick="Close()" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group text-right">
                                <label class="control-label ">شماره ثبت</label>
                                <input type="hidden" asp-for="RegistrationCode0" class="form-control"> 
                                <input type="text" readonly="readonly" asp-for="RegistrationCode" class="form-control"> 
                                <span asp-validation-for="RegistrationCode" class="error text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group text-right">
                                <label class="control-label ">نام</label>
                                <input type="text" asp-for="Name" class="form-control">
                                <span asp-validation-for="Name" class="error text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group text-right">
                                <label class="control-label ">تلفن</label>
                                <input type="text" asp-for="Phone" class="form-control">
                                <span asp-validation-for="Phone" class="error text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group text-right">
                                <label class="control-label ">WebSite</label>
                                <input type="text" asp-for="WebSite" class="form-control">
                                <span asp-validation-for="WebSite" class="error text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group text-right">
                                <label class="control-label ">آدرس</label>
                                <textarea rows="5" type="text" asp-for="Address" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group text-right">
                                <label class="control-label ">لوگو</label>
                                <input type="file" asp-for="FileLogo" name="FileLogo" id="FileLogo" accept="image/*">
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="form-group text-left">
                               <img src="/Images/@Model.Logo" id="Logos"  width="200" height="110"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" onclick="SendForm('/Company/Edit','FrmCreate')" class="btn btn-primary">افزودن</button>
                </div>
            </div>
        </form>
    </div>
</div>

<partial name="_ValidationScriptsPartial"/>

<script>
    function Close() {
        $(document).ready(function () {
            $('#CreateCompo').remove();
            $('.modal-backdrop').remove();
        });
    }


    function readURL(input) {

        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#Logos').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#FileLogo").change(function () {
        readURL(this);
    });

</script>