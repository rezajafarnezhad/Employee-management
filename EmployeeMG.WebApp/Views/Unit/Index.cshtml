

@model EmployeeMG.Core.ApplicationContract.Unit.ListUnit

@{
    Layout = "_Layout";
    ViewData["Tit"] = "مدیریت واحد ها";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">لیست واحد ها</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item"><a href="/">خانه</a></li>
                    <li class="breadcrumb-item active">لیست واحد ها</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>



<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title mb-2 text-bold">مشاهده واحد ها</h5>
                        <div id="example2_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                            <div class="row">
                                <div class="col-md-12">

                                    <form id="mform" action="/Unit/Search" data-ajax="true" data-ajax-method="post" data-ajax-mode="replace" data-ajax-update="#Content">
                                        <div id="Content">
                                            <partial name="_Unit" model="@Model" />
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <partial name="_Create" />
            </div>

        </div>
    </div>
</div>


@section js
{
    <script>

        function sendPage(pagenum) {
            $("#pageid").val(pagenum);
            $("#mform").submit();
        }
        function RefreshTable() {
            $("#myTable").load("/Unit/Index #myTable");
            Close();
        }

        function Edit(_ID) {


            LoadComponenet("/Unit/Edit/",
                { ID: _ID },
                function(res) {
                    $('body').append(res);
                    $('#CreateCompo').modal();
                });

        }

        function Delete(_ID) {

            RemoveData("/Unit/Delete/", {ID:_ID});
        }


    </script>
}