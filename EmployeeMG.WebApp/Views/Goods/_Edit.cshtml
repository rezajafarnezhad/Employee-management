
@model EmployeeMG.Core.ApplicationContract.Goods.GoodsModel

@{
    Layout = null;
}



<div class="modal fade" id="EditModal" tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <form id="FrmCreate" method="post" enctype="multipart/form-data">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">ویرایش کالا  (@Model.Name)</h5>
                    <button type="button" onclick="Close()" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group text-right">
                                <input type="hidden" asp-for="Code" class="form-control">
                                <label>نام</label>
                                <input type="text" asp-for="Name" class="form-control" placeholder="وارد کنید">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group text-right">
                                <label>تعداد</label>
                                <input type="number" asp-for="Count" class="form-control" placeholder="وارد کنید">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" onclick="SendForm('/Goods/Edit','FrmCreate')" class="btn btn-primary">ویرایش</button>
                </div>
            </div>
        </form>
    </div>
</div>


<script>


    function Close() {
        $(document).ready(function () {
            $('#EditModal').remove();
            $('.modal-backdrop').remove();
        });
    }
</script>