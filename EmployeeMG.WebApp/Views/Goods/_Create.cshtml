
@{
    Layout = null;
}

<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">ثبت کالا جدید</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <!-- text input -->
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label>کد کالا</label>
                    <input type="number" id="Code" value="0" class="form-control">
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>نام کالا</label>
                    <input type="text" id="Name" class="form-control" placeholder="وارد کنید">
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>تعداد</label>
                    <input type="number" value="0" id="Count" class="form-control">
                </div>
            </div>
            <div class="col-md-2">
                <label>&nbsp; &nbsp;</label>
                <a class="btn btn-success form-control" href="#" onclick="sendGoods()"><i class="fa fa-plus-square"></i>  ثبت  </a>
            </div>
        </div>
    </div>
    <!-- /.card-body -->
</div>

<script>

    function sendGoods() {
        SendData('/Goods/Create', { Code: $("#Code").val(), Name: $("#Name").val(), Count: $("#Count").val() });
    }
</script>