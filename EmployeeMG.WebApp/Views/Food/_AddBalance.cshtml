
@model EmployeeMG.Core.ApplicationContract.Food.NUTritionCardModel

@{
    Layout = null;
}

<div class="modal fade" id="AddBalanceModal" tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <form id="FrmCreate" method="post" enctype="multipart/form-data">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"> افزایش موجودی کارمند با کد پرسنلی (@Model.CodePersonnel) </h5>
                    <button type="button" onclick="Close()" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group text-right">
                                <input type="hidden" asp-for="Id" class="form-control">
                                <input type="hidden" asp-for="CodePersonnel" class="form-control">
                                <label>موجودی</label>
                                <input type="number" asp-for="Balance" class="form-control" placeholder="وارد کنید">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" onclick="SendForm('/Food/AddBalance','FrmCreate')" class="btn btn-primary">افرودن موجودی</button>
                </div>
            </div>
        </form>
    </div>
</div>


<script>


    function Close() {
        $(document).ready(function () {
            $('#AddBalanceModal').remove();
            $('.modal-backdrop').remove();
        });
    }
</script>