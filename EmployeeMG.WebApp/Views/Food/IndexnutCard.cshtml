
@model EmployeeMG.Core.ApplicationContract.Food.ListNUTritionCard

@{
    Layout = "_Layout";
    ViewData["Tit"] = "مدیریت کارت تغذیه";
}


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <partial name="_CreateNUTCard" />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title mb-2 text-bold">مدیریت کارت تغذیه</h5>
                        <div id="example2_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                            <div class="row">
                                <div class="col-md-12">
                                    <form id="mform" action="/Food/SearchNUT" data-ajax="true" data-ajax-method="post" data-ajax-mode="replace" data-ajax-update="#Content">
                                        <div id="Content">
                                            <partial name="_NUTCard" model="@Model" />
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section js
{
    <script>

        function sendPage(pagenum) {
            $("#pageid").val(pagenum);
            $("#mform").submit();
        }
        function RefreshTable() {
            $("#myTable").load("/Food/IndexnutCard #myTable");
            Close();
        }

        function AddBalance(_ID) {

            LoadComponenet("/Food/AddBalance/",
                { ID: _ID },
                function (res) {
                    $('body').append(res);
                    $('#AddBalanceModal').modal();
                });

        }

        function Delete(_ID) {

            RemoveData("/Food/DeleteUNTCard/", { ID: _ID });
        }

    </script>
}